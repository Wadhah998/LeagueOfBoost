{% extends '/frontOffice.html.twig' %}
{% block title %}Commentaire{% endblock %}
  <style>
    .show-commt{position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);}
  th{
    color:white;
  }
  .table{
    border: 1px solid white;
  }</style>
{% block body %}
<div class="show-commt">
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ commentaire.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_index') }}">back to list</a>
    /

    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
    

    {{ include('commentaire/_delete_form.html.twig') }}
    </div>
{% endblock %}























<div class="item-details-page">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">
            <div class="line-dec"></div>
            <h2>Add<em>Your comment</em> Here.</h2>
          </div>
        </div>
        <div class="col-lg-12">
            <class="row">
              <div class="col-lg-4">
                <fieldset>
                  <label for="title">Item Title</label>
                  <input type="title" name="title" id="title" placeholder="Ex. Lyon King" autocomplete="on" required>
                </fieldset>
              </div>
              <div class="col-lg-4">
                <fieldset>
                  <label for="description">Description For Item</label>
                  <input type="description" name="description" id="description" placeholder="Give us your idea" autocomplete="on" required>
                </fieldset>
              </div>
              <div class="col-lg-8">
                <fieldset>
                  <a href="{{ path('app_commentaire_new') }}">Create new Commentaire</a>
                </fieldset>
              </div>
            </div>
        </div>
     </div>