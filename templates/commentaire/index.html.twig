{% extends './frontOffice.html.twig' %}
{% block title %}Commentaire index{% endblock %}
{% block body %}
    <div class='comment-tab'>
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr style="color: white;">
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.comment }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    /
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                    /
                    {{ include('commentaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actualite_index') }}">Create new</a>
    </div>
    <style>
    .comment-tab{
        position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
    }
    </style>
{% endblock %}
