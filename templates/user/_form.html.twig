 <div align="center"   style="margin-left: 400px"  >
<div class="item-details-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2>Edit Your <em>Profile</em></h2>
                </div>
            </div>
            {{ form_start(form, {'attr': {'id': 'contact'}}) }}
            <div class="col-lg-8">
<div class="form-group">
    {{ form_label(form.firstname, 'First Name') }}
    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.lastname, 'Last Name') }}
    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.email, 'Email') }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.username, 'Username') }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
</div>
    <div class="form-group">
        {{ form_label(form.plainPassword, 'Password') }}
        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-lg-3">
        <fieldset>
            <button  type="submit"  class="orange-button">Edit</button>
        </fieldset>
    </div>
    <div class="form-group">
        <br>
        {{ form_label(form.agreeTerms, 'I agree to the terms of service', {'attr': { 'autocomplete': 'on'}}) }}
        {{ form_widget(form.agreeTerms, {'attr': { 'autocomplete': 'on'}}) }}
    </div>
{{ form_end(form) }}
            </div></div></div></div></div></div>
