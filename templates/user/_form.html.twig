
    <div class="item-details-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <div class="line-dec"></div>
                        <h2>Apply your team For <em>The Game</em> Here.</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    {{ form_start(form, {'attr': {'id': 'contact'}}) }}
                    <div class="row">
                        <div class="col-lg-4">
                            <fieldset>
                                {{ form_label(form.firstname) }}
                                {{ form_widget(form.firstname, {'attr': {'placeholder': 'Ex. Team Wadhah', 'autocomplete': 'on'}}) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                {{ form_label(form.lastname) }}
                                {{ form_widget(form.lastname, {'attr': {'placeholder': 'Give us your idea', 'autocomplete': 'on'}}) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-8">
                            <fieldset>
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username) }}
                            </fieldset>
                        </div>
                        <div class="col-lg-8">
                            <fieldset>
                                {{ form_widget(form.Save, {'attr': {'class': 'orange-button', 'label':'Save'}}) }}
                            </fieldset>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
