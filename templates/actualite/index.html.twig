{% extends 'frontOffice.html.twig' %}

{% block body %}

  <div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h6>Liberty NFT Market</h6>
          <h2>Discover Some Top Items</h2>
          <span>Home > <a href="#">Explore</a></span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container-fluid">
    {% for a in actualites %}
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
          <div class="item" style="margin:20px 0 20px 0 ; border : 2px solid rgba(255, 255, 255, 0.3);  border-radius: 20px ; padding: 15px; ">
            <h4 style="font-size: 24px; color: purple; font-weight: bold; margin :10px 0 10px 20px;">{{ a.titre }}</h4>
            <div class="thumb" style=" text-align: center;"  >
              <img src="../../assets/images/featured-03.jpg" alt="" style="border-radius: 20%; margin-bottom : 15px;  max-width: 350px ;">
              <div class="hover-effect">
                <div class="content text-center">
                  <img src="../../assets/images/author.jpg" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%; margin-bottom: 10px;">
                  <p style="color: black; font-size: 18px;">{{ a.description }}</p>
                  <p style="margin -10px 0 0 0;"><a href="{{ path('app_actualite_show', { 'id': a.id }) }}" style="color: lightpurple;">View More</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock %}
