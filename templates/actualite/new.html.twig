{% extends '/backOffice.html.twig' %}

{% block body %}
                  <div class="container-fluid pt-4 px-4">
                    <div class="row g-4">

                      <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Responsive Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">News Title</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Delete</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for a in actualites %}

                                        <tr>
                                            <th scope="row">1</th>
                                            <td>{{ a.titre }}</td>
                                            <td>{{ a.description }}</td>
                                           <td><a href="{{ path('app_actualite_edit', {'id': a.id}) }}">Edit</a> </td>


                                        <td><form method="post" action="{{ path('app_actualite_delete', {'id': a.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ a.id) }}">
                                                <button class="btn-danger">Delete</button>
                                            </form></td>
                                      
                                        </tr>
                                              {% endfor %}

                                    </tbody>
                                </table>
                                <a href="{{ path('app_actualite_newnew') }}">Add New</a>

                            </div>
                        </div>
                    </div>

                        
                </div>
            </div>
{% endblock %}