<!DOCTYPE html>

<title>Reclamation</title>

{% block body %}
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ reclamation.theme }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ reclamation.object }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ reclamation.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}">back to list</a>

    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
