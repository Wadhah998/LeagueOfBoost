{% extends 'frontOffice.html.twig' %}




{% block body %}

<div class="item-details-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="row">

                        {{ form_start(form, {'attr': {'id': 'contact', 'enctype': 'multipart/form-data'}}) }}
                        <div class="col-lg-12">

                            <span id="label-text">{{ form_label(form.theme) }}</span>
                            <fieldset>
                                {{ form_widget(form.theme,{'attr': { 'autocomplete': 'on'}}) }}


                            </fieldset>
                        </div>


                        <div class="col-lg-12">
                            <span id="label-text">{{ form_label(form.object) }}</span>
                            <fieldset>
                                {{ form_widget(form.object, {'attr': { 'autocomplete': 'on'}}) }}
                            </fieldset>
                        </div>


                        <div class="col-lg-12">
                            <span id="label-text">{{ form_label(form.text) }}</span>
                            <fieldset>
                                {{ form_widget(form.text, {'attr': { 'autocomplete': 'on'}}) }}
                            </fieldset>
                        </div>





                        <div class="col-lg-12" >
                            <fieldset>
                                <button  type="submit"  class="orange-button">Report</button>
                            </fieldset>
                        </div>

                    </div>







                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}





{% endblock %}