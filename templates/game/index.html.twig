{% extends 'frontOffice.html.twig' %}
{% block body %}

          <div class="most-popular">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h4>WIN MONEY Right Now ! </h4>
                </div>


                {% for game in games %}

                <div class="row">
                  <div class="col-lg-3 col-sm-6">
                    <div class="item">
                      <img src="assets/images/popular-01.jpg" alt="">
                      <h4>{{ game.title }}<br><span>{{ game.description }}</span></h4>
                      <ul>
                        <li><i class="fa fa-star"></i> {{ game.price }}</li>
                        <li><i class="fa fa-download"></i> {{ game.date ? game.date|date('Y-m-d H:i:s') : '' }}</li>
                      </ul>

                      <div class="col-lg-12">
                        <div class="main-button">
                        <a href="browse.html">Participate Now</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
            {% endfor %}

              </div>
            </div>
          </div>

{% endblock %}






