{% extends 'frontOffice.html.twig' %}

{% block body %}
     <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="collections">
            <div class="row">
              <div class="col-lg-12">
                <div class="section-heading">
                  <div class="line-dec"></div>
                  <h2>Choose the <em>Game</em> you like.</h2>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="owl-collection owl-carousel">

              {% for game in games %}
             

              
             
                  <div class="item">
                    <img src="../../assets/images/collection-01.jpg" alt="">
                    <div class="down-content">
                      <h4>{{ game.title }}</h4>
                      <span class="collection">Price:<br><strong>{{ game.price }} DT</strong></span>
                      <span class="category">Date:<br><strong> {{ game.date ? game.date|date('Y-m-d H:i:s') : '' }}</strong></span>
                      <div class="main-button">
                        <a href="{{path('app_team_new')}}">Register Now</a>
                        
                        <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                        <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                      </div>
                    </div>
                  </div>
               
          
               
            {% endfor %}
             </div>
              </div> 

         </div>
        </div>
     </div>
    </div>  


{% endblock %}


          



