<div class="item-details-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h2>Apply your team For <em>The Game</em> Here.</h2>
        </div>
      </div>
      <div class="col-lg-12">
        {{ form_start(form, {'attr': {'id': 'contact'}}) }}
        <div class="row">
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.name) }}
              {{ form_widget(form.name, {'attr': {'placeholder': 'Ex. Team Wadhah'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.description) }}
              {{ form_widget(form.description, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
             {{ form_label(form.game, null, {'label_attr': {'for': 'game.id'}}) }}
            {{ form_widget(form.game, {'attr': {'id': 'game_id'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-8">
            <fieldset>
              {{ form_widget(form.Save, {'attr': {'class': 'orange-button'}, 'label': 'Submit Your Application'}) }}
            </fieldset>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
