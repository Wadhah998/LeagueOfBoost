<div class="item-details-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h2>Apply your team For <em>This Game</em> Here.</h2>
        </div>
      </div>
      <div class="col-lg-12">
        {{ form_start(form, {'attr': {'id': 'contact'}}) }}
        <div class="row">
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.name) }}
              {{ form_widget(form.name, {'attr': {'placeholder': 'Ex. Team Wadhah', 'autocomplete': 'on'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.description) }}
              {{ form_widget(form.description, {'attr': {'placeholder': 'Give us your idea', 'autocomplete': 'on'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player) }}
              {% for player in form.player %}

            {{ form_widget(player.riot_username) }}
            
              {% endfor %}
              
            </fieldset>
          </div>
        
          <div class="col-lg-8">
            <fieldset>
              {{ form_widget(form.Save, {'attr': {'class': 'orange-button'}, 'label': 'Submit Your Application'}) }}
            </fieldset>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>


