<div class="item-details-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h2>Apply your team For <em>This Game</em> Here.</h2>
        </div>
      </div>
      <div class="col-lg-12">
        {{ form_start(form, {'attr': {'id': 'contact'}}) }}
        <div class="row">
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.name) }}
              {{ form_widget(form.name, {'attr': {'placeholder': 'Ex. Team Wadhah'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.description) }}
              {{ form_widget(form.description, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player1) }}
              {{ form_widget(form.player1, {'attr': {'placeholder': 'Please enter player username'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player2) }}
              {{ form_widget(form.player2, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player3) }}
              {{ form_widget(form.player3, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player4) }}
              {{ form_widget(form.player4, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          <div class="col-lg-4">
            <fieldset>
              {{ form_label(form.player5) }}
              {{ form_widget(form.player5, {'attr': {'placeholder': 'Give us your idea'}}) }}
            </fieldset>
          </div>
          
          <div class="col-lg-8">
            <fieldset>
              {{ form_widget(form.Save, {'attr': {'class': 'orange-button', 'label':'Save'}}) }}
            </fieldset>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
